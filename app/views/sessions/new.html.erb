<div class="login_form">
<% if flash[:notice] %>
  <b>***<%= flash[:notice] %>***</b><br>
<% end %>
<%= image_tag 'profile_picture', class: 'profile_picture'%>
<br><br>
<%= form_with model: @client do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <br>

  <%= f.submit "Log In", class:'btn submit' %>
<% end %>
<br><br>
</div>