<%= form_with model: @event_vendor, url: event_vendor_path, action: 'event_vendor' do |f| %>
<%= f.label "Catering" %>
<%= f.collection_select name="vendors[][:vendor_id]", Vendor.cater, :id, :name, include_blank: true %><br>

<%= f.label "Music" %>
<%= f.collection_select name="vendors[][:vendor_id]", Vendor.music, :id, :name, include_blank: true %><br>

<%= f.label "Decor" %>
<%= f.collection_select name="vendors[][:vendor_id]", Vendor.decor, :id, :name, include_blank: true %><br>

<%= f.submit "Add Vendors" %>
<% end %>